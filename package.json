{
  "name": "amazon_ebay_web",
  "version": "1.0.0",
  "description": "Web interface for Amazon to eBay arbitrage system",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "server": "nodemon backend/src/server.js",
    "client": "cd frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend && npm run build",
    "install-deps": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "amazon",
    "ebay",
    "arbitrage",
    "ecommerce",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
