PORT=5000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
MONGODB_URI=mongodb://localhost:27017/amazon_ebay_arbitrage

